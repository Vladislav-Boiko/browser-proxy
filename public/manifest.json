{
  "short_name": "Browser proxy",
  "name": "Browser Proxy",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "TODO: add a description",
  "browser_action": {
    "default_icon": "logo512.png",
    "default_popup": "popup.html"
  },
  "icons": { 
    "16": "logo16.png",
    "32": "logo32.png",
    "64": "logo64.png",
   "128": "logo128.png",
   "192": "logo192.png",
   "512": "logo512.png"
  },
  "permissions": ["activeTab", "storage"],
  "devtools_page": "popup.html",
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]
}
